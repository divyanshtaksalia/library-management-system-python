{
  "version": 2,
  "builds": [
    { "src": "wsgi.py", "use": "@vercel/python" },
    { "src": "public", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "wsgi.py"
    },
    
    {
      "src": "/",
      "dest": "/public/login.html"
    },
    
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
{
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
